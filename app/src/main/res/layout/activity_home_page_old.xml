                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Symptom 4"
                                android:textSize="30dp"
                                android:textStyle="bold"/>
                            <TextView
                                android:id="@+id/symp5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Symptom 5"
                                android:textSize="30dp"
                                android:textStyle="bold"/>


                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


